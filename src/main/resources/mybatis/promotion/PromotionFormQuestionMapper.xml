<!-- 报名表单题目(PROMOTION_FORM_QUESTION) -->
<mapper namespace="com.jubaozan.service.promotion.repository.mybatis.mapper.PromotionFormQuestionMapper">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="promotionFormQuestionMap" type="com.jubaozan.service.promotion.model.PromotionFormQuestionEntity">
        <id column="ID" property="id" jdbcType="BIGINT" />
        <result column="FORM_ID" property="formId" jdbcType="BIGINT" />
        <result column="QUESTION_TYPE" property="questionType" jdbcType="VARCHAR" />
        <result column="QUESTION_TITLE" property="questionTitle" jdbcType="VARCHAR" />
        <result column="SJID" property="sjid" jdbcType="INTEGER" />
        <result column="CREATE_TIME" property="createTime" jdbcType="TIMESTAMP" />
        <result column="UPDATE_TIME" property="updateTime" jdbcType="TIMESTAMP" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->
    
    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表所有字段 -->
    <sql id="allColumns">
        ID, FORM_ID, QUESTION_TYPE, QUESTION_TITLE, SJID, CREATE_TIME, UPDATE_TIME
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->
    
    <!-- 查询所有数据 -->
    <select id="findPromotionFormQuestionAll" resultMap="promotionFormQuestionMap">
        SELECT
        <include refid="allColumns" />
        FROM promotion_form_question
    </select>
    
    <!-- 根据条件参数查询数据列表 -->
    <select id="findPromotionFormQuestionByCondition" resultMap="promotionFormQuestionMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM promotion_form_question WHERE 1 = 1
        <if test="formId != null">
            AND FORM_ID = #{formId}
        </if>
        <if test="questionType != null">
            AND QUESTION_TYPE = #{questionType}
        </if>
        <if test="questionTitle != null and questionTitle != ''">
            AND QUESTION_TITLE LIKE CONCAT('%', #{questionTitle}, '%')
        </if>
        ORDER BY QUESTION_TYPE,ID
    </select>
    
    <!-- 根据主键查询数据 -->
    <select id="findPromotionFormQuestionByIds" resultMap="promotionFormQuestionMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM promotion_form_question WHERE ID IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertPromotionFormQuestion" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.jubaozan.service.promotion.model.PromotionFormQuestionEntity">
        INSERT INTO promotion_form_question (
            FORM_ID, QUESTION_TYPE, QUESTION_TITLE, SJID
        ) VALUES (

            #{formId},
            #{questionType},
            #{questionTitle},
            #{sjid}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updatePromotionFormQuestion" parameterType="map">
        UPDATE promotion_form_question
        <set>
            <if test="formId != null">
                FORM_ID = #{formId},
            </if>
            <if test="questionTitle != null">
                QUESTION_TITLE = #{questionTitle}
            </if>

        </set>
        WHERE ID = #{id}
    </update>
    
    <!-- 根据主键删除数据 -->
    <delete id="deletePromotionFormQuestionById" parameterType="long">
        DELETE FROM PROMOTION_FORM_QUESTION WHERE ID = #{id}
    </delete>

    <select id="queryFormQuestionAnswerByCustomerNo" resultType="com.jubaozan.service.promotion.vo.form.EnrollCustomerAnswerVO"
    parameterType="map">

        select a.id as questionId,a.question_title questionTitle,a.question_type questionType, b.answer
        from promotion_form_question a
        left join promotion_customer_answer b on a.id = b.question_id
        where a.form_id = #{formId} and b.customer_no=#{customerNo} order by a.id
    </select>
</mapper>